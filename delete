  "</span><span class="err">speak</span><span class="s2">": "</span><span class="err">Here</span><span class="w"> </span><span class="err">is</span><span class="w"> </span><span class="err">an</span><span class="w"> </span><span class="err">actionable</span><span class="w"> </span><span class="err">background</span><span class="w"> </span><span class="err">image</span><span class="w"> </span><span class="err">||</span><span class="s2">"
